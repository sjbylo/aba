######################################################################################################
# Main cluster configuration. Review and adjust all values as needed.

cluster_name={{ cluster_name }}			# Cluster name (used with base_domain for full domain)
base_domain={{ domain }}			# Forms the cluster domain, e.g. sno.example.com

api_vip={{ api_vip }}			# VIP for the OpenShift API endpoint
ingress_vip={{ ingress_vip }}			# VIP for app ingress (*.apps)
					# - Ignored for Single Node OpenShift (SNO)
					# DNS requirements:
					#   api.<cluster_name>.<base_domain>    -> api_vip
					#   *.apps.<cluster_name>.<base_domain> -> ingress_vip
					# For SNO: both records point to the same node IP

machine_network={{ machine_network }}/{{ prefix_length }}		# CIDR for all cluster nodes

starting_ip={{ starting_ip }}			# First static node IP (node0 / rendezvous)
					# - Sequential IPs assigned from this address
					# - Must be inside the machine_network range
					# - Ensure IPs are unused

hostPrefix=23				# Pod subnet per node; 23 gives 510 pod IPs
					# Use 22 or lower for more pod IPs (bare metal)

master_prefix=master			# Node name prefix for masters
worker_prefix=worker 			# Node name prefix for workers

num_masters={{ num_masters }} 				# Number of masters (control plane)
num_workers={{ num_workers }}				# Number of workers (compute)
					# Standard: 3 masters + â‰¥2 workers
					# Compact: 3 masters only
					# SNO: 1 master only

dns_servers={{ dns_servers }}			# Comma-separated list of DNS servers
next_hop_address={{ next_hop_address }}		# Default gateway IP (optional)
ntp_servers={{ ntp_servers }}			# Comma-separated NTP servers (optional)
					# Used during bootstrap and post-install
					# Needed if host clock isn't synced

ports={{ ports }}				# Space-separated interface names for machine network
					# Single: ports=ens1f0
					# Multiple (bonded): ports="ens1f0 ens2f0 ens3f0 ens4f0"
vlan={{ vlan }}					# Optional VLAN tag (works with or without bonding)

ssh_key_file=~/.ssh/id_rsa		# Path to SSH key (recommended)
					# - Public key (~/.ssh/id_rsa.pub) copied to all nodes
					# - Private key (~/.ssh/id_rsa) used for SSH node access

int_connection={{ int_connection }}				# Internet connection mode:
					#   proxy  - use cluster-wide proxy (from env vars)
					#   direct - use NAT / direct Internet
					#   empty  - use local mirror (default)

#http_proxy=http://10.0.1.8:3128	# Optional proxy overrides (if env vars not set)
#https_proxy=http://10.0.1.8:3128
#no_proxy=.example.com,.lan

######################################################################################################
# The values below apply only if using vCenter or ESXi for VM-based clusters.

mac_prefix={{ mac_prefix }}		# MAC prefix for VMs; replaced by random hex if 'x'
					# If macs.conf exists, its values override this
					# Ensure addresses are unique and unused
					# For bare metal, MACs can be edited in agent-config.yaml

master_cpu_count={{ master_cpu_count }}			# CPU cores and memory per master
master_mem={{ master_mem }}				# Minimum for SNO: 8 CPUs
worker_cpu_count={{ worker_cpu_count }}			# CPU cores and memory per worker
worker_mem={{ worker_mem }}				# Ignored for SNO

data_disk={{ data_disk }}				# Optional thin-provisioned data disk
					# Leave undefined for no data disk

