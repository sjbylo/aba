apiVersion: v1alpha1
kind: AgentConfig
metadata:
  name: {{ cluster_name }}
rendezvousIP: {{ rendezvous_ip }}
hosts:
{%- for role, prefix, count, mac_offset, ip_offset in [("master", master_prefix, num_masters|int, 0, 0), ("worker", worker_prefix, num_workers|int, 3, 3)] %}
{%- for hostcnt in range(count) %}
{%- if role == 'master' and num_workers == '0' and num_masters == '1' %}
  - hostname: {{ cluster_name }}
{% else %}
  - hostname: {{ prefix }}{{ loop.index }}
{% endif %}
    role: {{ role }}
    interfaces:
     - name: {{ arr_ports[0] }}
       macAddress: {{ arr_macs[hostcnt + mac_offset] }}
#    rootDeviceHints:
#      deviceName: "/dev/sda"
    networkConfig:
      interfaces:
      - name: {{ arr_ports[0] }}.{{ vlan }}
        description: VLAN {{ vlan }} using port {{ arr_ports[0] }}
        type: vlan 
        state: up 
        vlan:
          base-iface: {{ arr_ports[0] }}
          id: {{ vlan }}
        ipv4:
          enabled: true
          address:
            - ip: {{ arr_ips[hostcnt + ip_offset] }}
              prefix-length: {{ prefix_length }}
          dhcp: false
      {%- if arr_dns_servers %}
      dns-resolver:
        config:
          server:
            {%- for dns in arr_dns_servers %}
            - {{ dns }}
            {%- endfor %}
      {%- endif %}
      routes:
        config:
          - destination: 0.0.0.0/0
            next-hop-address: {{ next_hop_address }}
            next-hop-interface: {{ arr_ports[0] }}.{{ vlan }}
{% endfor %}
{%- endfor %}
